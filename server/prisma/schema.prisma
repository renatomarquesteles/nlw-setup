// File generated by `npx prisma init --datasource-provider SQLite`

generator client {
  provider = "prisma-client-js"
}

// Creates a visual representation of the database
generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit {
  id         String          @id @default(uuid()) // Auto sets a primary key with an unique id
  title      String
  created_at DateTime
  dayHabits  DayHabit[]
  weekDays   HabitWeekDays[]

  @@map("habits") // Table name
}

model HabitWeekDays {
  id       String @id @default(uuid())
  habit_id String
  week_day Int
  habit    Habit  @relation(fields: [habit_id], references: [id])

  @@unique([habit_id, week_day]) // Prevents duplicated week days for the same habit
  @@map("habit_week_days")
}

model Day {
  id        String     @id @default(uuid())
  date      DateTime
  dayHabits DayHabit[]

  @@unique([date]) // Prevents duplicated date registers
  @@map("days")
}

// Table created to make the relationship between the Habits and Days tables
model DayHabit {
  id       String @id @default(uuid())
  day_id   String
  habit_id String

  // Insert the related tables
  // day Day
  // habit Habit
  // auto-format to create the relationships

  day   Day   @relation(fields: [day_id], references: [id])
  habit Habit @relation(fields: [habit_id], references: [id])

  @@unique([day_id, habit_id]) // Prevents that the same habit gets completed on the same day
  @@map("day_habits")
}
